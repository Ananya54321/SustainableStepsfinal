<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ScheduleFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/segregationCategoriesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/buttonformat"
        android:elevation="5dp"
        android:fontFamily="@font/inter_semibold"
        android:padding="12dp"
        android:text="Choose Segregation Categories"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView7"
        app:layout_constraintStart_toStartOf="@+id/cardView7"
        app:layout_constraintTop_toBottomOf="@+id/cardView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Good Morning, User!"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView

        android:id="@+id/horizontalScrollView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cal1"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="1\nMon\n"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cal2"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="2\nTue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cal3"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="3\nWed"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cal4"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="4\nThu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cal5"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="5\nFri"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cal6"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="6\nSat" />

            <TextView
                android:id="@+id/cal7"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="7\nSun" />

            <TextView
                android:id="@+id/cal8"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="8\nMon" />

            <TextView
                android:id="@+id/cal9"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="9\nTue" />

            <TextView
                android:id="@+id/cal10"
                android:layout_width="64dp"
                android:layout_height="74dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/schedule_date_props"
                android:gravity="center"
                android:padding="16dp"
                android:text="10\nWed" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Schedule Today:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="353dp"
        android:layout_height="183dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="8:00"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/schedule_text_props"
                android:padding="8dp"
                android:text="Scheduled Pickup\nInitiated by the Team"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="9:00"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintEnd_toStartOf="@+id/textView13"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/schedule_text_props"
                android:padding="8dp"
                android:text="By  9:00 Waste Will be picked\n up. For More info,\n Contact: +91*XXXXXX7"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="You have selected to segregate your waste into:"
        app:layout_constraintEnd_toEndOf="@+id/segregationCategoriesButton"
        app:layout_constraintStart_toStartOf="@+id/segregationCategoriesButton"
        app:layout_constraintTop_toBottomOf="@+id/segregationCategoriesButton" />

    <TextView
        android:id="@+id/selectedItemsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="232dp"
        android:layout_height="150dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/schedulefooterimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedItemsText" />


</androidx.constraintlayout.widget.ConstraintLayout>